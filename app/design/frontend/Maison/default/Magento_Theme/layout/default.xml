<?xml version="1.0"?>
<!--
/**
 * Maison de Pierre - Default Layout (Magento Best Practice)
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Add loading screen -->
        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Template" name="maison.loading" template="Magento_Theme::html/loading.phtml" before="-"/>
        </referenceContainer>
        
        <!-- Remove ALL default Magento header blocks -->
        <referenceBlock name="logo" remove="true"/>
        <referenceBlock name="header.links" remove="true"/>
        <referenceContainer name="header.panel" remove="true"/>
        
        <!-- Remove default search, cart, compare, wishlist blocks -->
        <referenceBlock name="top.search" remove="true"/>
        <referenceBlock name="minicart" remove="true"/>
        <referenceBlock name="header.compare" remove="true"/>
        <referenceBlock name="wishlist_link" remove="true"/>
        <referenceBlock name="header-wrapper" remove="true"/>
        <referenceContainer name="header.panel.wrapper" remove="true"/>
        
        <!-- Remove default navigation sections (showing between header and content) -->
        <referenceContainer name="page.top" remove="true"/>
        <referenceContainer name="nav.sections" remove="true"/>
        <referenceBlock name="catalog.topnav" remove="true"/>
        <referenceBlock name="navigation.sections" remove="true"/>
        
        <!-- COMPLETELY REPLACE header.container with our custom header -->
        <referenceContainer name="header.container" htmlTag="div" htmlClass="">
            <block class="Maison\Homepage\Block\Navigation" name="maison.header" template="Magento_Theme::html/header.phtml"/>
        </referenceContainer>
        
        <!-- Remove ALL default Magento footer blocks -->
        <referenceBlock name="store_switcher" remove="true"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>
        <referenceBlock name="absolute_footer" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="cms_footer_links_container" remove="true"/>
        <referenceBlock name="privacy-policy-link" remove="true"/>
        
        <!-- Remove default footer container completely and replace with our custom footer -->
        <!-- Override footer-container to remove page-footer class and wrapper -->
        <referenceContainer name="footer-container" htmlTag="div" htmlClass="">
            <referenceContainer name="footer" remove="true"/>
            <block class="Maison\Homepage\Block\Footer" name="maison.footer" template="Magento_Theme::html/footer.phtml" before="-"/>
        </referenceContainer>
        
        <!-- Add sidebars and overlays -->
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="maison.mobile.nav" template="Magento_Theme::html/mobile-nav.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="maison.mini.cart" template="Magento_Theme::html/mini-cart.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="maison.search.overlay" template="Magento_Theme::html/search-overlay.phtml"/>
            
            <!-- Initialize Feather Icons (direct, no RequireJS) -->
            <block class="Magento\Framework\View\Element\Template" name="maison.feather.init" template="Magento_Theme::html/feather-init.phtml"/>
            
            <!-- Initialize theme using proper RequireJS -->
            <block class="Magento\Framework\View\Element\Template" name="maison.init" template="Magento_Theme::html/init.phtml"/>
        </referenceContainer>
    </body>
</page>
