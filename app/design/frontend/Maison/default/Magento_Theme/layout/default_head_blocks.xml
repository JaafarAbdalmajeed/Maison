        <css src="css/pages/home.css"/>
        <css src="css/pages/404.css"/>
        <css src="css/pages/category.css"/>
        <css src="css/pages/cart.css"/>
        <css src="css/pages/checkout.css"/>
        <css src="css/pages/wishlist.css"/>
        <css src="css/pages/account.css"/>
        <css src="css/pages/cms.css"/>
        
        <!-- Responsive -->
        <css src="css/main.css"/>
        
        <!-- RTL Support -->
        <css src="css/rtl.css"/>
        
        <!-- Header Scroll Fix (MUST load LAST to override everything!) -->
        <css src="css/header-scroll-fix.css"/>
        
        <!-- Transparent Header Override (FINAL - Maximum Specificity) -->
        <css src="css/header-transparent.css"/>
        
        <!-- Product Page Fix (MUST load VERY LAST to override everything!) -->
        <css src="css/pages/product.css"/>
    </head>
</page>
