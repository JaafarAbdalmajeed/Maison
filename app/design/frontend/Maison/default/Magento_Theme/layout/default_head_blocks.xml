        <!-- Magento Wrapper Fixes (MUST load before other styles) -->
        <css src="css/magento-fixes.css"/>
        
        <!-- Typography Fix (Override Magento fonts) -->
        <css src="css/typography-fix.css"/>
        
        <!-- Base Styles -->
        <css src="css/base/variables.css"/>
        <css src="css/base/reset.css"/>
        <css src="css/base/typography.css"/>
        
