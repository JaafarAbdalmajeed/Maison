<?php
/**
 * Brand Filter Template
 * @var \Maison\Catalog\Block\Category\Filter\Brands $block
 * @var \Magento\Framework\Escaper $escaper
 */
$brands = $block->getBrands();
?>
<?php if (!empty($brands)): ?>
    <dt class="filter-options-title" role="heading" aria-level="3">
        <span><?= $escaper->escapeHtml(__('Brands')) ?></span>
    </dt>
    <dd class="filter-options-content">
        <ol class="items filter-items">
            <?php foreach ($brands as $brand): ?>
                <li class="item filter-item">
                    <a href="<?= $escaper->escapeUrl($block->getBrandUrl($brand['value'])) ?>" 
                       class="filter-link"
                       rel="nofollow">
                        <span class="filter-label"><?= $escaper->escapeHtml($brand['label']) ?></span>
                        <span class="count">(<?= $escaper->escapeHtml($brand['count']) ?>)</span>
                    </a>
                </li>
            <?php endforeach; ?>
        </ol>
    </dd>
<?php endif; ?>


