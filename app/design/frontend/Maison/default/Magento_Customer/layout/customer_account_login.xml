<?xml version="1.0"?>
<!--
/**
 * Maison de Pierre - Customer Login Page Layout
 * Custom layout for login page with luxury design
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- Auth CSS (for login page) -->
        <css src="css/auth.css"/>
    </head>
    <body>
        <attribute name="class" value="customer-account-login"/>
        
        <!-- Login Page Container -->
        <referenceContainer name="content">
            <container name="login.container" htmlTag="div" htmlClass="login-container">
                <!-- Login content will be rendered here by Magento -->
            </container>
        </referenceContainer>
        
        <!-- Auth JavaScript -->
        <referenceContainer name="before.body.end">
            <script src="js/auth.js"/>
        </referenceContainer>
    </body>
</page>

