<?xml version="1.0"?>
<!--
/**
 * Maison de Pierre - Customer Registration Page Layout
 * Custom layout for registration page with luxury design
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- Auth CSS (for registration page) -->
        <css src="css/auth.css"/>
    </head>
    <body>
        <attribute name="class" value="customer-account-create"/>
        
        <!-- Registration Page Container -->
        <referenceContainer name="content">
            <container name="register.container" htmlTag="div" htmlClass="register-container">
                <!-- Registration content will be rendered here by Magento -->
            </container>
        </referenceContainer>
        
        <!-- Auth JavaScript -->
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="auth.custom.js" template="Magento_Customer::auth-js.phtml"/>
        </referenceContainer>
    </body>
</page>

