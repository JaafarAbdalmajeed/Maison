<?xml version="1.0"?>
<!--
/**
 * Maison de Pierre - About Page Layout
 * This layout is specifically for the CMS page with identifier "about"
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Remove default CMS page content -->
        <referenceBlock name="cms_page" remove="true"/>
        
        <!-- Add custom About page template -->
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" 
                   name="maison.about" 
                   template="Magento_Cms::about/about.phtml"/>
        </referenceContainer>
    </body>
</page>

