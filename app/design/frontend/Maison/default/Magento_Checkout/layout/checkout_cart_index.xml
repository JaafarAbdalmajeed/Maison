<?xml version="1.0"?>
<!--
/**
 * Maison de Pierre - Shopping Cart Page Layout
 * Complete cart page layout with proper structure
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <attribute name="class" value="checkout-cart-index"/>

        <!-- Add view model to default cart blocks -->
        <referenceBlock name="checkout.cart">
            <arguments>
                <argument name="view_model" xsi:type="object">Magento\Checkout\ViewModel\Cart</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="checkout.cart.form">
            <arguments>
                <argument name="view_model" xsi:type="object">Magento\Checkout\ViewModel\Cart</argument>
            </arguments>
        </referenceBlock>

        <!-- Wrap content in custom structure -->
        <referenceContainer name="content">
            <!-- Cart Wrapper -->
            <container name="cart.container" htmlTag="div" htmlClass="cart-container" before="checkout.cart">
                <container name="cart.container.inner" htmlTag="div" htmlClass="container-fluid px-4 px-lg-5">

                    <!-- Page Title -->
                    <block class="Magento\Theme\Block\Html\Title"
                           name="page.main.title"
                           template="Magento_Theme::html/title.phtml">
                        <arguments>
                            <argument name="css_class" xsi:type="string">page-title</argument>
                            <argument name="page_title" xsi:type="string" translate="true">
                                Shopping Cart
                            </argument>
                        </arguments>
                    </block>

                    <!-- Cart Content -->
                    <container name="cart.content" htmlTag="div" htmlClass="row g-4">
                        
                        <!-- Left Column - Cart Items -->
                        <container name="cart.items"
                                   htmlTag="div"
                                   htmlClass="col-lg-8 cart-items-column">
                            <!-- Cart form will be moved here -->
                        </container>

                        <!-- Right Column - Summary -->
                        <container name="cart.summary.container"
                                   htmlTag="div"
                                   htmlClass="col-lg-4 cart-summary-column">
                            <!-- Summary blocks will be moved here -->
                        </container>

                    </container>
                </container>
            </container>
        </referenceContainer>

        <!-- Move blocks to correct positions (move must be at body level) -->
        <move element="checkout.cart" destination="cart.items" before="-"/>
        <move element="checkout.cart.totals" destination="cart.summary.container" before="-"/>
        <move element="checkout.cart.coupon" destination="cart.summary.container" after="checkout.cart.totals"/>
        <move element="checkout.cart.methods.onepage.bottom" destination="cart.summary.container" after="checkout.cart.coupon"/>
        
        <!-- Remove invalid shipping block if it exists -->
        <referenceBlock name="checkout.cart.shipping" remove="true"/>
        
        <!-- Hide minicart on cart page -->
        <referenceBlock name="maison.mini.cart" remove="true"/>

    </body>
</page>
