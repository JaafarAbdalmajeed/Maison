<?xml version="1.0"?>
<!--
/**
 * Maison de Pierre - Shopping Cart Page Layout
 * FINAL – Safe & Magento-core compatible
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <attribute name="class" value="checkout-cart-index"/>

        <!-- Main Content -->
        <referenceContainer name="content">

            <!-- Cart Wrapper -->
            <container name="cart.container" htmlTag="div" htmlClass="cart-container">
                <container name="cart.container.inner" htmlTag="div" htmlClass="container-fluid px-4 px-lg-5">

                    <!-- Page Title -->
                    <block class="Magento\Theme\Block\Html\Title"
                           name="page.main.title"
                           template="Magento_Theme::html/title.phtml">
                        <arguments>
                            <argument name="css_class" xsi:type="string">page-title</argument>
                            <argument name="page_title" xsi:type="string" translate="true">
                                Shopping Cart
                            </argument>
                        </arguments>
                    </block>

                    <!-- Cart Content -->
                    <container name="cart.content" htmlTag="div" htmlClass="row g-4">

                        <!-- ================= LEFT : CART ITEMS ================= -->
                        <container name="cart.items"
                                   htmlTag="div"
                                   htmlClass="col-lg-8 cart-items-column">

                            <!-- ✅ CORRECT CART FORM BLOCK -->
                            <block class="Magento\Checkout\Block\Cart"
                                   name="checkout.cart.form"
                                   template="Magento_Checkout::cart/form.phtml">

                                <!-- REQUIRED ITEM RENDERERS -->
                                <arguments>
                                    <argument name="item_renderers" xsi:type="array">
                                        <item name="default" xsi:type="string">
                                            Magento\Checkout\Block\Cart\Item\Renderer
                                        </item>
                                    </argument>
                                </arguments>

                                <!-- DEFAULT ITEM RENDERER -->
                                <block class="Magento\Checkout\Block\Cart\Item\Renderer"
                                       name="checkout.cart.item.renderers.default"
                                       as="default"
                                       template="Magento_Checkout::cart/item/default.phtml"/>
                            </block>

                        </container>

                        <!-- ================= RIGHT : SUMMARY ================= -->
                        <container name="cart.summary.container"
                                   htmlTag="div"
                                   htmlClass="col-lg-4 cart-summary-column">

                            <!-- Totals -->
                            <block class="Magento\Checkout\Block\Cart\Totals"
                                   name="checkout.cart.totals"
                                   template="Magento_Checkout::cart/totals.phtml"/>

                            <!-- Coupon -->
                            <block class="Magento\Checkout\Block\Cart\Coupon"
                                   name="checkout.cart.coupon"
                                   template="Magento_Checkout::cart/coupon.phtml"
                                   after="checkout.cart.totals"/>

                            <!-- Proceed to Checkout -->
                            <block class="Magento\Checkout\Block\Onepage\Link"
                                   name="checkout.cart.methods.onepage.bottom"
                                   template="Magento_Checkout::onepage/link.phtml"
                                   after="checkout.cart.coupon">
                                <arguments>
                                    <argument name="css_class" xsi:type="string">
                                        checkout
                                    </argument>
                                </arguments>
                            </block>

                        </container>

                    </container>
                </container>
            </container>

        </referenceContainer>
    </body>
</page>
