<?xml version="1.0"?>
<!--
/**
 * Maison de Pierre - Shopping Cart Page Layout
 * Custom layout for cart page with luxury design
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="checkout-cart-index"/>
        
        <!-- Cart Page Container -->
        <referenceContainer name="content">
            <container name="cart.container" htmlTag="div" htmlClass="cart-container">
                <container name="cart.container.inner" htmlTag="div" htmlClass="container-fluid px-4 px-lg-5">
                    <!-- Cart Title -->
                    <block class="Magento\Theme\Block\Html\Title" name="page.main.title" template="Magento_Theme::html/title.phtml">
                        <arguments>
                            <argument name="css_class" xsi:type="string">page-title</argument>
                            <argument name="page_title" xsi:type="string" translate="true">Shopping Cart</argument>
                        </arguments>
                    </block>
                    
                    <!-- Cart Content -->
                    <container name="cart.content" htmlTag="div" htmlClass="row">
                        <!-- Cart Items (Left Column) -->
                        <container name="cart.items" htmlTag="div" htmlClass="col-lg-8">
                            <block class="Magento\Checkout\Block\Cart" name="checkout.cart" template="Magento_Checkout::cart.phtml">
                                <block class="Magento\Checkout\Block\Cart\Item\Renderer" name="checkout.cart.item.renderers" as="renderers">
                                    <block class="Magento\Checkout\Block\Cart\Item\Renderer" name="checkout.cart.item.renderers.default" as="default" template="Magento_Checkout::cart/item/default.phtml"/>
                                </block>
                                
                                <!-- Cart Actions -->
                                <block class="Magento\Checkout\Block\Cart" name="cart.summary" template="Magento_Checkout::cart/totals.phtml" after="checkout.cart.form">
                                    <arguments>
                                        <argument name="jsLayout" xsi:type="array">
                                            <item name="components" xsi:type="array">
                                                <item name="block-totals" xsi:type="array">
                                                    <item name="component" xsi:type="string">Magento_Checkout/js/view/cart/totals</item>
                                                    <item name="displayArea" xsi:type="string">totals</item>
                                                    <item name="config" xsi:type="array">
                                                        <item name="template" xsi:type="string">Magento_Checkout::cart/totals</item>
                                                    </item>
                                                </item>
                                            </item>
                                        </argument>
                                    </arguments>
                                </block>
                            </block>
                        </container>
                        
                        <!-- Cart Summary (Right Column) -->
                        <container name="cart.summary.container" htmlTag="div" htmlClass="col-lg-4">
                            <block class="Magento\Checkout\Block\Cart\Totals" name="checkout.cart.totals" template="Magento_Checkout::cart/totals.phtml">
                                <arguments>
                                    <argument name="jsLayout" xsi:type="array">
                                        <item name="components" xsi:type="array">
                                            <item name="block-totals" xsi:type="array">
                                                <item name="component" xsi:type="string">Magento_Checkout/js/view/cart/totals</item>
                                                <item name="displayArea" xsi:type="string">totals</item>
                                                <item name="config" xsi:type="array">
                                                    <item name="template" xsi:type="string">Magento_Checkout::cart/totals</item>
                                                </item>
                                            </item>
                                        </item>
                                    </argument>
                                </arguments>
                            </block>
                            
                            <!-- Proceed to Checkout Button -->
                            <block class="Magento\Checkout\Block\Onepage\Link" name="checkout.cart.methods.onepage.bottom" template="Magento_Checkout::onepage/link.phtml">
                                <arguments>
                                    <argument name="css_class" xsi:type="string">checkout</argument>
                                </arguments>
                            </block>
                        </container>
                    </container>
                </container>
            </container>
        </referenceContainer>
    </body>
</page>

